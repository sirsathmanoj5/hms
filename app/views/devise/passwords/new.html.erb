<div class="container">
  <h2 class="col-md-3">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="col-md-3">
      <%= f.label :email , class:"form-control-label"%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
    <br/>
    <div class="col-md-3">
      <%= f.submit "Send me reset password instructions" , class:"btn btn-default btn-primary"%>
    </div>
  <% end %>
  <div class="col-md-3">
    <%= render "devise/shared/links" %>
  </div>
</div>