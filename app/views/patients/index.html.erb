<div class="text-center">
  <p id="notice"><%= notice %></p>
  <div class="text-right" style="margin-right: 100px">
    <%=link_to "User List", users_path %>
  </div>
    <h1>Patient List</h1>
</div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Gender</th>
        <th>Date of Birth</th>
        <th>Appointment</th>
        <th>Admission</th>
        <th>Discharge</th>
        <th>Doctor name</th>
        <th>Hospital name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.first_name %></td>
          <td><%= patient.last_name %></td>
          <td><%= patient.gender %></td>
          <td><%= patient.dob %></td>
          <td><%= patient.appointement %></td>
          <td><%= patient.admission %></td>
          <td><%= patient.discharge %></td>
          <td><%= patient.doctor_name %></td>
          <td><%= patient.hospital_name %></td>
          <td><%= link_to 'Show', patient %></td>
          <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
          <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Patient', new_patient_path %>
</div>